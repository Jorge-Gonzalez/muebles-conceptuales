        // boton y mensaje principal
        #main_message
          a#GaleriaBtn.no-under.scroll(href='#Galeria')
            #main_box.box
              h1.call Uno ve lo que sabe.
              p.credit Rudolph Arnheim
            object(id='main_arrow', data='img/main_arrow.svg', type='image/svg+xml', width='37', height='281', onclick="hola()")
