  body

    mixin menu(sec)
      - var links = [{href:'#Inicio', text:'Inicio'}, {href:'#Galeria', text:'Galería'}, {href:'#Prensa', text:'Prensa'}, {href:'#Acerca', text:'Acerca de'}, {href:'#Exposiciones', text:'Exposiciones'}, {href:'#Contacto', text:'Contacto'}]
      .nav
        each link in links
          unless link.href == sec
            a.scroll(id= link.href.slice(1) + 'Btn', href= link.href) #{link.text}
